{
    "name": "mrpunyapal/rector-pest",
    "description": "Rector upgrade rules for Pest - refactoring and best practices for Pest testing framework",
    "type": "rector-extension",
    "license": "MIT",
    "keywords": [
        "rector",
        "pest",
        "pestphp",
        "phpunit",
        "testing",
        "refactoring",
        "static-analysis",
        "ast",
        "instant-upgrades"
    ],
    "authors": [
        {
            "name": "Punyapal Shah",
            "email": "mrpunyapal@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "rector/rector": "^1.2"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.0",
        "phpstan/extension-installer": "^1.4",
        "rector/type-perfect": "^1.0",
        "symplify/easy-coding-standard": "^12.3",
        "symplify/rule-doc-generator": "^12.3"
    },
    "autoload": {
        "psr-4": {
            "MrPunyapal\\RectorPest\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MrPunyapal\\RectorPest\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        },
        "sort-packages": true,
        "platform-check": false
    },
    "scripts": {
        "phpstan": "phpstan analyse --ansi",
        "check-cs": "ecs check --ansi",
        "fix-cs": "ecs check --fix --ansi",
        "rector": "rector --dry-run --ansi",
        "rector-fix": "rector --ansi"
    }
}
